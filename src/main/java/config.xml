<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean name="student" class="com.himani.niet.spring.Student">
    	<property name="studentId" value="123"/>
    	<property name="studentName" value="Himani"/>
    	<property name="studentAddress" ref="address" />
    </bean>
    
    <bean name="address" class="com.himani.niet.spring.Address">
    	<property name="houseNumber" value="123"/>
    	<property name="address2" value="NIET"/>
    	<property name="cityName" value="Greater Noida"/>
    	<property name="country" value="India"/>
    </bean>

  	
</beans>